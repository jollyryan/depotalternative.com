<!DOCTYPE html>
<html>
  <head>
    <title>Depot Alternative | <%= content_for?(:title) ? yield(:title) : "Support local suppliers" %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<div id="header">
		<%= render :partial => 'layouts/header' %>
	</div>
    <div id="container">
		<div class="wrapper">
			<% flash.each do |name, msg| %>
	       		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	     	<% end %>
	     	<%= yield %>
		</div>
	</div>
  </body>
</html>