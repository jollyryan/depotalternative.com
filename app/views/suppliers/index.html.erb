<h1>Listing suppliers - All Suppliers</h1>

<div id="suppliers_wrapper">

	<ul id="listings">

	<% @suppliers.each do |supplier| %>
	<li>
		<a href="#">
			<span>
	    		<div class="role">
					<h3><%= supplier.name %></h3>
					<h4>Flooring</h4> <span><%= supplier.description %></span>
				</div>
				<span class="location">
					<%= supplier.city.city_name %>
	    			<%= supplier.city.state %>
				</span>
				<div class="meta"><%= supplier.created_at.to_date.to_s(:short) %></div>
			</span>
		</a>
	</li>
	<% end %>
	
	</ul>

</div>

<br />

<%= link_to 'New Supplier', new_supplier_path %>
