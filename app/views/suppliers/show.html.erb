<p id="notice"><%= notice %></p>

<h2>  <%= @supplier.name %>   </h2>


<p>
  <b>Address:</b>
  <%= @supplier.address %>
</p>

<p>
  <b>Phone Number:</b>
  <%= @supplier.phone_number %>
</p>

<p>
  <b>Email:</b>
  <%= @supplier.email %>
</p>

<p>
  <b>Specialty:</b>
  <%= @supplier.specialty.name %>
</p>

<p>
  <b>Description:</b>
  <%= @supplier.description %>
</p>


<p>
  <% if @supplier.uploaded_file_file_size != nil  %>
    <br>Uploaded Image - Thumbnail Size<br>
	<%= image_tag @supplier.uploaded_file.url(:thumbnail) %>
    <br>Uploaded Image - Normal Size<br>
    <%= image_tag @supplier.uploaded_file.url(:normal) %>
  <% else %>
    <br>Uploaded Image
    No file has been uploaded.
  <% end %>
</p>


<%= link_to 'Edit', edit_supplier_path(@supplier) %> |
<%= link_to 'Back', suppliers_path %>
